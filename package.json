{
  "name": "mern-testing-app",
  "version": "1.0.0",
  "description": "MERN stack application with comprehensive testing",
  "scripts": {
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --selectProjects client unit server unit",
    "test:integration": "jest --selectProjects client integration server integration",
    "test:e2e": "cd client && npm run test:e2e",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "setup-test-db": "cd server && npm run setup-test-db"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}